<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <title>
        {% if page_title is defined %}
            {{ page_title }} | {{ site_name }}
        {% else %}
            {{ site_name }}
        {% endif %}
    </title>

    {% block meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% endblock %}

    {% block styles %}
        <link href="/vendor/twbs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="{{ base_url }}assets/style.css">
    {% endblock %}
</head>
<body>
<header class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ base_url }}">{{ site_name }}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Přepnout navigaci">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="{{ base_url }}">Domů</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ base_url }}admin/">Administrace</a></li>
            </ul>
        </div>
    </div>
</header>

<main class="container py-4">
    {% block content %}{% endblock %}
</main>

<footer class="bg-light border-top mt-5 py-4">
    <div class="container text-center text-muted">
        <p class="mb-0">&copy; {{ "now"|date("Y") }} – {{ site_name }}</p>
    </div>
</footer>

{% block scripts %}
    <script src="/vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
</body>
</html>
