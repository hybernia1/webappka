{% extends 'base.html.twig' %}

{% block content %}
<section class="mb-4">
    <div class="p-4 bg-light rounded-3 border">
        <h2 class="mb-1">Aktuální příspěvky</h2>
        <p class="mb-0 text-muted">Vítej v nové verzi webappky s jednoduchým CMS.</p>
    </div>
</section>

<section class="list">
    {% if posts is empty %}
        <div class="alert alert-info">Zatím tu nejsou žádné příspěvky. Přidej je v administraci.</div>
    {% else %}
        <div class="row g-3">
            {% for post in posts %}
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        {% if post.thumbnail_url %}
                            <img src="{{ post.thumbnail_url }}" class="card-img-top" alt="{{ post.title }}" style="height: 180px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-start justify-content-between mb-2">
                                <h3 class="h5 mb-0"><a class="text-decoration-none" href="?page=post&slug={{ post.slug ?? post.id }}">{{ post.title }}</a></h3>
                                <span class="text-muted small ms-2">{{ post.published_at|date('j.n.Y') }}</span>
                            </div>
                            {% if post.categories is not empty %}
                                <div class="mb-2">
                                    {% for category in post.categories %}
                                        <span class="badge text-bg-primary me-1">{{ category.name }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            {% if post.tags_list is not empty %}
                                <div class="mb-2">
                                    {% for tag in post.tags_list %}
                                        <span class="badge text-bg-secondary me-1">{{ tag.name }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <p class="card-text flex-grow-1">{{ (post.excerpt ?? post.content)|slice(0, 160) }}{% if (post.excerpt ?? post.content)|length > 160 %}…{% endif %}</p>
                            <a class="btn btn-outline-primary mt-auto" href="?page=post&slug={{ post.slug ?? post.id }}">Číst dál</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</section>
{% endblock %}
