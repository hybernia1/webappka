{% extends 'base.html.twig' %}

{% block content %}
<section class="detail">
    {% if post %}
        <h2>{{ post.title }}</h2>
        <p class="meta">Publikováno: {{ post.published_at|date('j.n.Y H:i') }}</p>
        <article>
            {{ post.content|nl2br }}
        </article>
    {% else %}
        <p>Příspěvek nebyl nalezen.</p>
    {% endif %}
</section>
{% endblock %}
